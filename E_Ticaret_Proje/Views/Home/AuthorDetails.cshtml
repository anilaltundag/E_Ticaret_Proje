@using E_Ticaret_Proje.Entity;
@model  Author

@{
    ViewBag.Title = "AuthorDetails";
}
<div class="container pb-5">
    <div class="row mt-5">
        <div class="col-md-6 mt-2">
            <img src="~/theme/img/@Model.Image" class="img-fluid rounded" width="70%">
            <div class="row pt-2">
                <b style="padding-left:150px"><i style="text-align:center">@Model.Name</i></b> 
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description" class="text-justify">
                            @Model.Description
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
