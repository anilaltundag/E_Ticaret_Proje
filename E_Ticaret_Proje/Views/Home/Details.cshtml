@using E_Ticaret_Proje.Entity;
@model  Product

@{
    ViewBag.Title = "Details";
}
<div class="container pb-5">
    <div class="row mt-5">
        <div class="col-md-6">
            <img src="~/theme/img/@Model.Image" class="img-fluid rounded" width="70%">
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.IsApproved && Model.Stock > 0)
                    {
                        <span class="badge badge-primary">Stokta var</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Stokta yok</span>
                    }

                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div id="description">
                        @if (@Model.Description.Length >= 500)
                        {
                            <p>@Model.Description.Substring(0, 499)...</p>
                        }
                        else
                        {
                            @Model.Description
                        }
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <h2 id="product-price">@Model.Price₺</h2>
                </div>
            </div>
            <div class="row mt-3">
                <div id="author" class="col-md-12">
                    <p><b>Yazar:</b> @Model.Author.Name</p>
                    <p><b>Yayınevi:</b> @Model.Publisher</p>
                    <p><b>Dil:</b> @Model.Language</p>
                    <p><b>Sayfa Sayısı:</b> @Model.PageCount</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-12 mt-3">
                    @if (Model.Stock > 0)
                    {
                        <button class="btn btn-success">
                            <i class="fa-solid fa-cart-shopping" aria-hidden="true"></i>
                            Sepete Ekle
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-danger" disabled="disabled">
                            <i class="fa-solid fa-cart-shopping" aria-hidden="true"></i>
                            Ürün Stokta Yok
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-12">
            <div class="bd-example bd-example-tabs">
                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="pills-description-tab" data-toggle="pill" href="#pills-description" role="tab" aria-controls="pills-description" aria-expanded="true">Ürün Açıklaması</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-author-tab" data-toggle="pill" href="#pills-author" role="tab" aria-controls="pills-author" aria-expanded="true">Yazar</a>
                    </li>

                </ul>
                <div class="tab-content" id="pills-tabContent">
                    <div class="tab-pane fade show active" id="pills-description" role="tabpanel" aria-labelledby="pills-description-tab">
                        <p style="text-align:justify">@Model.Description
                        <p>
                    </div>
                    <div class="tab-pane fade" id="pills-author" role="tabpanel" aria-labelledby="pills-author-tab">
                        <div class="row mt-2">
                            <div class="col-md-3">
                                <img src="~/theme/img/@Model.Author.Image" alt="@Model.Author.Name" width="100%">
                            </div>
                            <div class="col-md-9" style="float: left;">
                                <p style="text-align:justify">
                                    @Model.Author.Description
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
